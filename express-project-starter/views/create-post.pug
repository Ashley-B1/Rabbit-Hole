extends layout.pug
include utils.pug

block content
  +validationErrorSummary(errors)
  form(action=`/posts/${post.id}/comments/create` method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    label(for="title") Title
    input(type="string" name="title" class='post title' value=post.title)
    label(for="content") Content
    textarea(name="content" cols="30" rows="10" class='post content' value=post.content)
    div
      button(type="submit" class="") Publish
      a(href=`/` class="submit btn") Cancel
