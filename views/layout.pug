doctype html
html
  head
      block head
        title="Rabbit Hole"
        link(rel='stylesheet' href='/stylesheets/index.css')
        append head
        //- add page specific js
        script(src="/javascripts/index.js" type="module" defer)
  body
    div#header
      div.left-nav
        div#icon
          a(href='/')
            img.logo(src="./splash-imgs/rabbit_hole_logo.jpeg", alt="logo")
        div#title
          h1= title
      div.right-nav
        ul
          li
            a(href='/posts/create') Write
          if locals.authenticated
            li
              a(href='/users/logout') Logout
          else
            li
              a(href='/users/login') Sign In
          if locals.authenticated
            li
              a(href=`/users/2`) My Page
          else
            li#sign-up
              button
                a(href='/users/create') Register
    block content
