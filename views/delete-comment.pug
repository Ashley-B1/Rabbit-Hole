extends layout.pug
append head
  link(rel="stylesheet" href="/stylesheets/delete-comment.css")
block content
  br
  p=comment.content
  div
    p Proceed with deleting this comment?
  div
    form(action=`/posts/${postId}/comments/${comment.id}/delete` method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      button(class='btn-delete' type='submit') Delete Comment
      a(href=`/posts/${postId}/comments/${comment.id}` class="btn-cancel") Cancel
