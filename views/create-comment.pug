extends layout.pug
include utils.pug

block content
  +validationErrorSummary(errors)
  form(action="/posts/create" method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    label(for="content") Write Comment Here
    textarea(name="content" cols="30" rows="10" class='comment content' value=comment.content)
    button(type="submit" class="") Send
    a(href=`/` class="submit btn") Cancel
