extends layout.pug
include utils.pug

append head
  link(rel="stylesheet" href="/stylesheets/create-post.css")

block content
  +validationErrorSummary(errors)
  form(action=`/posts/create` method="post")
    input(type="hidden" name="_csrf" value=csrfToken)
    div
      label(for="title" class='title-label') Title
    div
      input(type="string" name="title" class='post-title' value=post.title)
    div
      label(for="content" class='title-label') Tell your story
    div
      textarea(name="content"  class='post-content' value=post.content)
    div
      button(type="submit" class="btn-publish") Publish
      a(href=`/` class="btn-cancel") Cancel
